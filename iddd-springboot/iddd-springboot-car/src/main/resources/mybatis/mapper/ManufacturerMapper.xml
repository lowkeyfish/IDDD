<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yujunyang.iddd.car.infrastructure.persistence.mybatis.mapper.ManufacturerMapper">
    <insert id="insert"
            parameterType="com.yujunyang.iddd.car.infrastructure.persistence.mybatis.mapper.model.ManufacturerDatabaseModel">
        INSERT INTO `manufacturer`(
            `uid`,
            `name`,
            `brand_id`
        ) VALUE(
            #{id},
            #{name},
            #{brandId}
            );
    </insert>

    <select id="selectById"
            resultType="com.yujunyang.iddd.car.infrastructure.persistence.mybatis.mapper.model.ManufacturerDatabaseModel">
        SELECT
            `uid` AS id,
            `name`,
            `brand_id` AS brandId
        FROM
            `manufacturer`
        WHERE
            `deleted` = 0 AND `uid` = #{id};
    </select>

    <update id="update"
            parameterType="com.yujunyang.iddd.car.infrastructure.persistence.mybatis.mapper.model.ManufacturerDatabaseModel">
        UPDATE `manufacturer` SET `name` = #{name}, `brand_id` = #{brandId}, `deleted` = 0
        WHERE `uid` = #{id};
    </update>

    <select id="selectByBrandId"
            resultType="com.yujunyang.iddd.car.infrastructure.persistence.mybatis.mapper.model.ManufacturerDatabaseModel">
        SELECT
            `uid` AS id,
            `name`,
            `brand_id` AS brandId
        FROM
            `manufacturer`
        WHERE
            `deleted` = 0 AND `brand_id` = #{brandId};
    </select>

    <select id="selectByIds"
            resultType="com.yujunyang.iddd.car.infrastructure.persistence.mybatis.mapper.model.ManufacturerDatabaseModel">
        SELECT
        `uid` AS id,
        `name`,
        `brand_id` AS brandId
        FROM
        `manufacturer`
        WHERE
        `deleted` = 0 AND `uid` IN
        <foreach collection="ids" open="(" separator="," close=")" item="id">
            #{id}
        </foreach>
    </select>

</mapper>