<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yujunyang.iddd.dealer.infrastructure.persistence.mybatis.mapper.DealerMapper">
    <insert id="insertOrIgnore"
            parameterType="com.yujunyang.iddd.dealer.infrastructure.persistence.mybatis.model.DealerDatabaseModel">
        INSERT IGNORE INTO `dealer`(
            `uid`,
            `name`,
            `city_id`,
            `specific_address`,
            `telephone`,
            `brand_id`,
            `status`,
            `create_time`
        ) VALUE(
            #{id},
            #{name},
            #{cityId},
            #{specificAddress},
            #{telephone},
            #{brandId},
            #{status},
            #{createTime}
        );
    </insert>

    <select id="selectById"
            resultType="com.yujunyang.iddd.dealer.infrastructure.persistence.mybatis.model.DealerDatabaseModel">
        SELECT
            `uid` AS id,
            `name`,
            `city_id` AS cityId,
            `specific_address` AS specificAddress,
            `telephone`,
            `brand_id` AS brandId,
            `status`,
            `create_time` AS createTime
        FROM
            `dealer`
        WHERE
            `deleted` = 0 AND `uid` = #{id};
    </select>

    <update id="update"
            parameterType="com.yujunyang.iddd.dealer.infrastructure.persistence.mybatis.model.DealerDatabaseModel">
        UPDATE `dealer` SET
            `name` = #{name},
            `city_id` = #{cityId},
            `specific_address` = #{specificAddress},
            `telephone` = #{telephone},
            `deleted` = 0,
            `brand_id` = #{brandId},
            `status` = {status}
        WHERE `uid` = #{id};
    </update>

    <select id="selectByName"
            resultType="com.yujunyang.iddd.dealer.infrastructure.persistence.mybatis.model.DealerDatabaseModel">
        SELECT
            `uid` AS id,
            `name`,
            `city_id` AS cityId,
            `specific_address` AS specificAddress,
            `telephone`,
            `brand_id` AS brandId,
            `status`,
            `create_time` AS createTime
        FROM
            `dealer`
        WHERE
            `deleted` = 0 AND `name` = #{name}
        LIMIT 1;
    </select>

</mapper>